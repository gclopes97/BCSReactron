{
  "name": "bcsapp",
  "version": "0.1.1",
  "description": "BCS service Aplication",
  "author": "bcs",
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "aws-sdk": "^2.739.0",
    "axios": "^0.20.0",
    "bootstrap": "^4.5.2",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.4",
    "font-awesome": "^4.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder -w",
    "win-cert": "electron-builder create-self-signed-cert -p bcs",
    "build": "npm run react-build && npm run electron-build",
    "release": "electron-builder -w -p 'onTagOrDraft'",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "repository": "https://github.com/gclopes97/BCSReactron",
  "build": {
    "appId": "com.bcs.bcsapp",
    "copyright": "Copyright BCS",
    "publish": {
      "provider": "github"
    },
    "win": {
      "icon": "public/icon.ico",
      "certificateFile": "private/bcs.pfx",
      "certificatePassword": "",
      "publisherName": "bcs"
    },
    "extraFiles": [
      {
        "from": "src/assets",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^10.0.0",
    "electron-builder": "^22.8.0",
    "express": "^4.17.1",
    "wait-on": "^5.2.0"
  }
}
